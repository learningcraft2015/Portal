@model PROJECT.Core.Model.ViewModel.UserDashboardViewModel
@using PROJECT.Core.Helpers
@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <h1>User Dashboard</h1>
</div>


<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading" style="background-color:orange;color:white">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-dashboard fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">(5)</div>
                        <div style="font-size:25px">RESULT</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Student2")">
                <div class="panel-footer">
                    <span class="pull-left">Result List</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading" style="background-color:darkred;color:white">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-linux fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">(10)</div>
                        <div style="font-size:25px">NOTIFICATION</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Student2")">
                <div class="panel-footer">
                    <span class="pull-left">Notification List</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>


    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading" style="background-color:black;color:white">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-gittip fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">(12)</div>
                        <div style="font-size:25px">FEEDBACK</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Student2")">
                <div class="panel-footer">
                    <span class="pull-left">Feedback List</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading" style="background-color:deepskyblue;color:white">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">(4)</div>
                        <div style="font-size:25px">MEMBERS</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","Student2")">
                <div class="panel-footer">
                    <span class="pull-left">Member List</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

</div>

<div class="row">

    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Top 10 Recent Members</h3>
            </div>
            <div class="panel-body">
                @if (Model.Student2RecentMembersList!= null)
                {

                    <table class="table table-hover">

                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Course Title
                                </th>
                                <th>
                                    Gender
                                </th>
                                <th>
                                    Created Date
                                </th>




                            </tr>
                        </thead>
                        <tfoot>

                            <tr>

                                <td colspan="4">
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <a class="btn btn-primary" href="@Url.Action("Index", "Student2")" role="button">View more »</a>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        </tfoot>

                        <tbody>




                            @foreach (var item in Model.Student2RecentMembersList)
                            {

                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseTitle)
                                    </td>
                                    <td>
                                        @Enum.GetName(typeof(GenderEnum), item.Gender)
                                    </td>
                                    <td>

                                        @item.CreatedDate.ToString("MMM-dd-yyyy , hh:mm tt")
                                    </td>




                                </tr>
                            }

                        </tbody>

                    </table>
                }
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Top 10 Recent Active Members</h3>
            </div>
            <div class="panel-body">
                @if (Model.Student2RecentActiveMembersList!= null)
                {

                    <table class="table table-hover">

                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    CourseTitle
                                </th>
                                <th>
                                    Gender
                                </th>
                                <th>
                                    Status
                                </th>




                            </tr>
                        </thead>
                        <tfoot>

                            <tr>

                                <td colspan="4" >
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <a class="btn btn-primary" href="@Url.Action("Index", "Student2")" role="button">View more »</a>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        </tfoot>

                        <tbody>




                            @foreach (var item in Model.Student2RecentMembersList)
                            {

                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseTitle)
                                    </td>
                                    <td>
                                        @Enum.GetName(typeof(GenderEnum), item.Gender)
                                    </td>
                                    <td>

                                        @if (item.Status == StatusEnum.Active)
                                        {
                                            <span class="glyphicon glyphicon-ok-sign" style="color:#3c763d" aria-hidden="true"></span>

                                            <span>Active</span>

                                        }
                                        else if (item.Status == StatusEnum.Inactive)
                                        {
                                            <span class="glyphicon glyphicon-remove-sign" style="color:#a94442" aria-hidden="true"></span>
                                            <span>Inactive</span>
                                        }
                                    </td>




                                </tr>
                            }

                        </tbody>

                    </table>
                }
            </div>
        </div>

    </div><!-- /.col-sm-4 -->
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
