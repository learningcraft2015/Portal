@model IEnumerable<PROJECT.Core.Model.ViewModel.Student2ViewModel>
@using PROJECT.Core.Helpers
@{
    ViewBag.Title = "Student Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gallery</h2>
<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Student Gallery</h3>
    </div>
    <div class="panel-body">


        <div class="row">
            @foreach (var item in Model)
            {
                string fullFilePath = string.Empty;
                fullFilePath = (string.IsNullOrEmpty(item.FileName)) ? "holder.js/300x300" : Url.Content(ApplicationConstant.UPLOADED_STUDENT_IMAGE_PATH + item.FileName);

                <div class="col-md-4">
                    <a  href="@Url.Action("Details", new { id = item.StudentId })">
                        <img class="img-thumbnail" src="@fullFilePath" alt="No Image" width="300" height="300" />
                    </a>
                    <h2>@item.Name</h2>

                    <p><a class="btn btn-default" role="button" href="@Url.Action("Details", new { id = item.StudentId })">View details »</a></p>
                </div><!-- /.col-lg-4 -->




            }


        </div>



    </div>
</div>